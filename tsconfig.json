{
  "compilerOptions": {
    "typeRoots": ["src/@types", "node_modules/@types"],
    "target": "ES2023",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
