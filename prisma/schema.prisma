generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt @id
  username String @unique
  premium  Boolean @default(false)
  premiumEmoji String?

  guilds GuildMemberData[] @relation("UserToGuilds")
}

model Guild {
  id   BigInt @id
  name String
  emoji String @default("ðŸ”¥")
  isStreakVisibilityToggle Boolean @default(true)

  members GuildMemberData[] @relation("GuildToMembers")
  lvlRoles lvlRoles[]
}

model GuildMemberData {
  guildId     BigInt
  userId      BigInt
  nickname    String?
  streak      Int
  lastMessage DateTime
  isVisibleEmoji Boolean @default(true)

  guild Guild @relation(fields: [guildId], references: [id], name: "GuildToMembers")
  user  User  @relation(fields: [userId], references: [id], name: "UserToGuilds")

  @@unique([guildId, userId])
}

model lvlRoles {
  roleId   BigInt @id
  guildId  BigInt
  streak    Int

  guild Guild @relation(fields: [guildId], references: [id])

  @@unique([roleId, guildId])
}
